{
  "coc.preferences.colorSupport": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "javascript",
    "javascriptreact",
    "markdown",
    "python",
    "sh",
    "zsh",
    "groovy"
  ],
  "coc.preferences.useQuickfixForLocations": true,
  "coc.source.emoji.filetypes": ["gitcommit", "markdown"],
  "css.lint.unknownProperties": "warning",
  "diagnostic-languageserver.debug": true,
  "diagnostic-languageserver.filetypes": {
    "dockerfile": "hadolint",
    "sh": "shellcheck",
    "vim": "vint",
    "yaml.ansible": "ansibleLint"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "terraform": "tffmt"
  },
  "diagnostic-languageserver.trace.server": "verbose",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.errorSign": "\u2718",
  "diagnostic.hintSign": "\uf0eb",
  "diagnostic.infoSign": "\uf129",
  "diagnostic.warningSign": "\uf12a",
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "npm",
  "highlight.colorNames.enable": true,
  "highlight.colors.enable": true,
  "highlight.document.enable": true,
  "javascript.suggestionActions.enabled": false,
  "languageserver": {
    "terraform": {
      "args": ["serve"],
      "command": "terraform-ls",
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    },
    "nginx-language-server": {
      "command": "nginx-language-server",
      "filetypes": ["nginx"],
      "rootPatterns": ["nginx.conf", ".git"]
    }
  },
  "list.insertMappings": {
    "<C-v>": "action:vsplit",
    "<C-x>": "action:split"
  },
  "list.normalMappings": {
    "<C-v>": "action:vsplit",
    "<C-x>": "action:split"
  },
  "markdownlint.config": {
    "MD013": false
  },
  "prettier.disableLanguages": ["helm"],
  "prettier.eslintIntegration": true,
  "prettier.tabWidth": 2,
  "pyright.organizeimports.provider": "isort",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": false,
  "python.linting.pylintEnabled": true,
  "python.pythonPath": "python3",
  "snippets.snipmate.enable": false,
  "suggest.completionItemKindLabels": {
    "class": "\uf0e8",
    "color": "\ue22b",
    "constant": "\uf8ff",
    "default": "\uf29c",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "event": "\ufacd",
    "field": "\uf93d",
    "file": "\uf471",
    "folder": "\uf115",
    "function": "\uf794",
    "interface": "\ufa52",
    "keyword": "\uf893",
    "method": "\uf6a6",
    "module": "\uf668",
    "operator": "\uf915",
    "property": "\ufab6",
    "reference": "\uf87a",
    "snippet": "\uf64d",
    "struct": "\ufb44",
    "text": "\ue612",
    "typeParameter": "\uf278",
    "unit": "\uf475",
    "value": "\uf8a3",
    "variable": "\uf71b"
  },
  "suggest.enablePreview": true,
  "suggest.timeout": 5000,
  "suggest.triggerAfterInsertEnter": true,
  "tsserver.reportStyleChecksAsWarnings": true,
  "yaml.completion": true,
  "yaml.format.enable": true,
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "kubernetes": "/*.yaml",
    "https://json.schemastore.org/gitlab-ci.json": ".gitlab-ci.yml"
  },
  "yaml.validate": true,
  "yaml.trace.server": "verbose"
}
